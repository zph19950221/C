#include <stdio.h>
#include <stdlib.h>

int main()
{
    //数字反转输入1234 显示4321
    int value,right_num;
    while(1)
    {
        do
        {
            printf("\n请输入一个数字：");
            scanf("%d",&value);
            if(value <= 0)
                printf("必须为正数！\n");
        }while(value <= 0);
        printf("反转后的数字为：");
        do
        {
            right_num = value % 10;
            printf("%d",right_num);
            value /= 10;
        }while(value != 0);
    }
    return 0;
}
