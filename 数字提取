#include <stdio.h>
#include <stdlib.h>

int main()
{
    //将4位数的每一位都取出来
    int num = 123456789;
    printf("个位：%d\n",num % 10);
    printf("十位：%d\n",num / 10 % 10);
    printf("百位：%d\n",num / 100 % 10);
    printf("千位：%d\n",num / 1000 % 10);
    //规律：除10再模10
    while(num > 0)
    {
        printf("%d\n",num % 10);
        num /=10;
    }
    return 0;
}
