// 菱形.cpp: 定义控制台应用程序的入口点。
//

#include "stdafx.h"


int main()
{
	int i, j;
	for (i = 0; i < 4; i++)
	{
		for ( j = 0; j <= 2 - i ; j++)
		{
			printf(" ");
		}
		for (j = 0; j <= 2 * i; j++)
		{
			printf("*");
		}
		printf("\n");
	}
	for (i = 0; i < 3; i++)
	{
		for (j = 0; j <= i; j++)
		{
			printf(" ");
		}
		for (j = 0; j < 5 - 2 * i; j++)
		{
			printf("*");
		}
		printf("\n");
	}
    return 0;
}

